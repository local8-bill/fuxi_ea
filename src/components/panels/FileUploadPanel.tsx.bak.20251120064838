"use client";

import { Card } from "@/components/ui/Card";
import { FileUpload } from "@/components/shared/FileUpload";

interface FileUploadPanelProps {
  title: string;
  helper: string;
  label: string;
  onFileSelected: (file: File) => Promise<void> | void;
  className?: string;
}

/**
 * FileUploadPanel
 *
 * Thin wrapper that:
 * - Renders a Card with title + helper text
 * - Uses the shared FileUpload control for the actual input
 * - No extra native <input type="file"> elements
 */
export function FileUploadPanel({
  title,
  helper,
  label,
  onFileSelected,
  className = "",
}: FileUploadPanelProps) {
  return (
    <Card className={className}>
      <p className="text-[0.65rem] tracking-[0.25em] text-gray-500 mb-1 uppercase">
        {title}
      </p>
      <p className="text-xs text-gray-500 mb-3">{helper}</p>

      <FileUpload label={label} onFileSelected={onFileSelected} />
    </Card>
  );
}
