"use client";

import { Card } from "@/components/ui/Card";
import { FileUpload } from "@/components/shared/FileUpload";

interface FileUploadPanelProps {
  title: string;
  helper?: string;
  label: string;
  onFileSelected: (file: File) => Promise<void> | void;
  className?: string;
}

/**
 * FileUploadPanel
 *
 * Thin wrapper that:
 * - Renders a titled card
 * - Shows helper text
 * - Uses the shared <FileUpload> pill (green button + filename)
 *
 * IMPORTANT: This component must NOT declare its own <input type="file">.
 * All file selection is delegated to <FileUpload>.
 */
export function FileUploadPanel({
  title,
  helper,
  label,
  onFileSelected,
  className,
}: FileUploadPanelProps) {
  const cardClassName = [
    "rounded-2xl border border-slate-200 bg-white px-5 py-4",
    className ?? "",
  ]
    .join(" ")
    .trim();

  return (
    <Card className={cardClassName}>
      <div className="flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
        <div className="space-y-1">
          <p className="text-[0.65rem] tracking-[0.25em] text-gray-500 uppercase">
            {title}
          </p>
          {helper && (
            <p className="text-xs text-gray-500 max-w-xl">
              {helper}
            </p>
          )}
        </div>

        {/* Single unified upload control: green pill + filename */}
        <FileUpload label={label} onFileSelected={onFileSelected} />
      </div>
    </Card>
  );
}
