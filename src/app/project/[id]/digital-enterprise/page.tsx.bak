"use client";

import React from "react";
import { useParams } from "next/navigation";
import type { TopSystem } from "@/domain/services/digitalEnterpriseStore";

type Stats = {
  systemsFuture: number;
  integrationsFuture: number;
  domainsDetected: number;
  topSystems?: TopSystem[];
};

export default function DigitalEnterprisePage() {
  const { id } = useParams<{ id: string }>();
  const [stats, setStats] = React.useState<Stats | null>(null);
  const [loading, setLoading] = React.useState(true);
  const [error, setError] = React.useState<string | null>(null);

  React.useEffect(() => {
    let cancelled = false;

    async function load() {
      try {
        setLoading(true);
        setError(null);
        const res = await fetch(
          `/api/digital-enterprise/stats?project=${encodeURIComponent(id)}`,
        );
        if (!res.ok) {
          const text = await res.text();
          console.error("digital-enterprise stats error", res.status, text);
          if (!cancelled) setError("Failed to load ecosystem stats.");
          return;
        }
        const data = await res.json();
        if (!cancelled) {
          setStats(data.stats ?? null);
        }
      } catch (err) {
        console.error("digital-enterprise stats fetch failed", err);
        if (!cancelled) setError("Failed to load ecosystem stats.");
      } finally {
        if (!cancelled) setLoading(false);
      }
    }

    load();
    return () => {
      cancelled = true;
    };
  }, [id]);

  const topSystems = stats?.topSystems ?? [];

  return (
    <div className="max-w-5xl mx-auto px-4 py-6 space-y-6">
      <section className="space-y-1">
        <p className="text-xs uppercase tracking-[0.4em] text-slate-500">
          DIGITAL ENTERPRISE
        </p>
        <h1 className="text-3xl font-semibold text-slate-900">
          Future-State Ecosystem for Project: {id}
        </h1>
        <p className="text-sm text-slate-500">
          These metrics are derived directly from your Lucid architecture diagram. We count
          unique systems that participate in at least one connection and their integrations.
        </p>
      </section>

      {loading && <div className="card p-4">Loading ecosystem statsâ€¦</div>}

      {error && !loading && (
        <div className="card p-4 text-sm text-red-600">{error}</div>
      )}

      {stats && !loading && (
        <>
          {/* Metrics row */}
          <section className="grid gap-4 md:grid-cols-3">
            <div className="card p-4">
              <div className="text-xs uppercase tracking-[0.2em] text-slate-500">
                Systems (Future)
              </div>
              <div className="mt-2 text-3xl font-semibold text-slate-900">
                {stats.systemsFuture}
              </div>
              <p className="mt-1 text-xs text-slate-500">
                Unique labeled systems that participate in at least one connection in your
                Lucid diagram.
              </p>
            </div>

            <div className="card p-4">
              <div className="text-xs uppercase tracking-[0.2em] text-slate-500">
                Integrations (Future)
              </div>
              <div className="mt-2 text-3xl font-semibold text-slate-900">
                {stats.integrationsFuture}
              </div>
              <p className="mt-1 text-xs text-slate-500">
                Unique system-to-system connections derived from connector lines.
              </p>
            </div>

            <div className="card p-4">
              <div className="text-xs uppercase tracking-[0.2em] text-slate-500">
                Domains Detected
              </div>
              <div className="mt-2 text-3xl font-semibold text-slate-900">
                {stats.domainsDetected}
              </div>
              <p className="mt-1 text-xs text-slate-500">
                Domain / ecosystem clustering will evolve in a later pass.
              </p>
            </div>
          </section>

          {/* Top systems */}
          <section className="card p-4 space-y-3">
            <div className="flex items-center justify-between">
              <div>
                <div className="text-xs uppercase tracking-[0.2em] text-slate-500">
                  Highest-Connectivity Systems
                </div>
                <div className="mt-1 text-sm text-slate-600">
                  Top 10 systems by number of integrations in your future-state ecosystem.
                </div>
              </div>
            </div>

            {topSystems.length === 0 ? (
              <p className="text-sm text-slate-500">
                No systems detected yet. Upload a Lucid CSV on the Tech Stack page to
                populate this view.
              </p>
            ) : (
              <div className="overflow-hidden rounded-xl border border-gray-200">
                <table className="w-full text-sm">
                  <thead className="bg-slate-50 text-left text-xs uppercase tracking-wide text-slate-500">
                    <tr>
                      <th className="px-3 py-2">#</th>
                      <th className="px-3 py-2">System</th>
                      <th className="px-3 py-2 text-right">Integrations</th>
                    </tr>
                  </thead>
                  <tbody>
                    {topSystems.map((sys, idx) => (
                      <tr
                        key={`${sys.name}-${idx}`}
                        className="border-t border-gray-100"
                      >
                        <td className="px-3 py-2 text-xs text-slate-500">
                          {idx + 1}
                        </td>
                        <td className="px-3 py-2">{sys.name}</td>
                        <td className="px-3 py-2 text-right font-medium">
                          {sys.degree}
                        </td>
                      </tr>
                    ))}
                  </tbody>
                </table>
              </div>
            )}
          </section>
        </>
      )}
    </div>
  );
}
